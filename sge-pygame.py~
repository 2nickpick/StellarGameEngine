class Settings(object):

    """Settings container objects."""

    @property
    def screensize(self):
        return self._screensize

    @screensize.setter
    def screensize(self, value):
        if self._screensize != value:
            pass

    @property
    def fullscreen(self):
        return self._fullscreen

    @fullscreen.setter
    def fullscreen(self, value):
        if self._fullscreen != value:
            pass

    def __init__(self, screensize, fullscreen, scale, scale_proportional,
                 scale_smooth, fps, delta, delta_min):
        pass


